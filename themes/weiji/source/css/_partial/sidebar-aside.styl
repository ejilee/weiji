@import "search"

#sidebar
  overflow: hidden

.widget-wrap
  width: 80%
  padding: 0 0 20px 0
  margin: 20px auto
  text-align: left

.widget-wrap:first-child
  text-align: right

.widget-wrap:last-child
  border-bottom: none

.widget-title
  @extend $block-caption
  color: color-accent
  margin-left: 0

.widget
  a
    color: color-link
    text-decoration: none
    &:hover
      text-decoration: underline
  ul, ol, dl
    ul, ol, dl
      margin-left: 15px
      list-style: disc
  
  li
    padding: 2px 0
    letter-spacing: 1px
    opacity: 0.7
    transition: opacity 200ms

    &:hover
      opacity: 1

    a
      color: #333
      font-weight: 600
      text-decoration: none

    a:hover
      text-decoration: none

  li.category-list-item
    text-transform: uppercase
    display: inline-block
    padding: 4px 8px
    border-radius: 4px
    margin: 0 6px 6px 0
    border: 1px solid color-border
    background-color: rgba(255,255,255,0.6)
    letter-spacing: 0

  li.archive-list-item
    font-size: 1.6em

  li.tag-list-item
    display: inline-block
    padding: 4px 8px
    border-radius: 4px
    margin: 0 6px 6px 0
    border: 1px solid color-border
    background-color: rgba(255,255,255,0.6)
    letter-spacing: 0

  li.recent-list-item
    font-size: 1em
    line-height: 1.6em
    margin-bottom: .4em
