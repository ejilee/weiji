#nav-search-btn
    color: color-accent
    font-family: font-icon
    font-size: 1.2rem
    font-weight: 300
    margin: 12px
    text-decoration: none
    cursor: pointer
    opacity: 0.7
    transition: opacity 200ms
    &:before
        content: "\f002"
    &:hover
        opacity: 1

#search-form-wrap
  position: relative
  top: -26px
  width: 100%
  height: 30px
  left: 100%
  opacity: 0
  transition: 0.2s ease-out
  &.on
    opacity: 1
    left: 0

.search-form
  position: absolute
  top: 0
  left: 0
  right: 0
  background: #fff
  padding: 5px 15px
  border-radius: 4px
  box-shadow: 0 0 6px rgba(0, 0, 0, 0.2)

.search-form-input
  border: none
  background: none
  color: color-default
  width: 100%
  font: 13px font-sans
  outline: none
  &::-webkit-search-results-decoration
  &::-webkit-search-cancel-button
    -webkit-appearance: none

.search-form-submit
  position: absolute
  top: 50%
  right: 10px
  margin-top: -7px
  font: 13px font-icon
  border: none
  background: none
  color: #bbb
  cursor: pointer
  &:hover, &:focus
    color: #777